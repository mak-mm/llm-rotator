# LLM Provider API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# Model Selection
OPENAI_MODEL=gpt-4-1106-preview
CLAUDE_ORCHESTRATOR_MODEL=claude-3-opus-20240229
CLAUDE_WORKER_MODEL=claude-3-sonnet-20240229
GEMINI_MODEL=gemini-1.5-flash

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# Orchestrator Settings
ORCHESTRATOR_MODEL=claude-3-opus-20240229
ORCHESTRATOR_THRESHOLD=0.7
ORCHESTRATOR_TIMEOUT=30

# Performance Settings
MAX_RESPONSE_TIME=2.0
CACHE_TTL=3600
MAX_CONCURRENT_REQUESTS=10

# Security Settings
ENABLE_TIMING_DEFENSE=true
MIN_FRAGMENT_COUNT=2
MAX_FRAGMENT_COUNT=5
TIMING_DEFENSE_MIN_DELAY=0.1
TIMING_DEFENSE_MAX_DELAY=0.5

# Demo Mode Settings
DEMO_MODE=true
ALWAYS_USE_BEST_MODELS=true
SHOW_COST_COMPARISON=true
ENABLE_VISUALIZATION=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_LOG_LEVEL=info

# Development Settings
DEBUG=false
ENVIRONMENT=development